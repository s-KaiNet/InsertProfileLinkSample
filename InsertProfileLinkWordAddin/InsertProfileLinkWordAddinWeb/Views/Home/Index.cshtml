<!DOCTYPE html>
<html ng-app="profile.link.app">
<head>
	<title>Profile Search</title>
	<meta charset="utf-8" />

	<link rel="stylesheet" href="~/components/fabric.min.css" />
	<link rel="stylesheet" href="~/components/fabric.components.min.css" />
	<link rel="stylesheet" href="~/components/loading-bar.min.css" />
	<link rel="stylesheet" href="~/Content/styles.css" />

	<script src="https://appsforoffice.microsoft.com/lib/1.1/hosted/office.js" type="text/javascript"></script>
	<script type="text/javascript" src="~/components/angular.min.js"></script>
	<script type="text/javascript" src="~/components/angular-route.min.js"></script>
	<script type="text/javascript" src="~/components/adal.min.js"></script>
	<script type="text/javascript" src="~/components/adal-angular.min.js"></script>
	<script type="text/javascript" src="~/components/ngOfficeUiFabric.min.js"></script>
	<script type='text/javascript' src="~/components/loading-bar.min.js"></script>

	<!-- app -->
	<script type="text/javascript" src="~/app/app.js"></script>
	<script type="text/javascript" src="~/app/mainCtrl.js"></script>
	<script type="text/javascript" src="~/app/o365.service.js"></script>

</head>
<body>
	<div>
		<ng-view />
	</div>
	<script type="text/ng-template" id="main.html">
		<div class="center">
			<div class="avatar" ng-show="!!profileImageUrl"><img ng-src="{{profileImageUrl}}" alt="" /></div><div></div>
			<div class="welcome" ng-show="!!username">Welcome, {{username}}</div>
		</div>
		<div class="search">
			<div>
				<uif-searchbox value="searchText"></uif-searchbox> <uif-button ng-click="search()" uif-type="primary">Search</uif-button>
			</div>
			<div>
				<ul>
					<li ng-repeat="user in searchResults">
						{{user.name}}
						<uif-button uif-type="command" ng-click="insertProfileUrl(user)">
							<uif-icon uif-type="plus"></uif-icon>
							Insert
						</uif-button>
					</li>
				</ul>
			</div>
		</div>
		<div id="log" ng-bind="log">
		</div>
	</script>
</body>
</html>
